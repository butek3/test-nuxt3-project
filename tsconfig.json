{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "types": ["node", "nuxt"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "assets/*": ["./assets/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.vue",
    ".nuxt/**/*.ts",
    "nuxt.config.ts",
    "app.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".output"
  ]
}